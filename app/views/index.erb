 <% if @photos %>
 <div id="myCarousel" class="carousel slide">
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
  </ol>
  <!-- Carousel items -->

  <div class="carousel-inner">
    <% @first_photo = @photos.shift %>
    <div class="active item"><%= img(@first_photo.file) %></div>
    <% @photos.each do |photo| %>
    <div class="item"><%= img(photo.file) %></div>
    <%end%>
  </div>
  <!-- Carousel nav -->
  <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
  <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
</div>
 <%end%>

<header class='span9 hero-unit' id='header'>
  <h1>Welcome to Flicker jr.</h1>
</header>

<div class="container-fluid">
  <div class="row-fluid">
    <div class="span2" id='left_col'>
      <% if session[:image] %>
      <div><%= img(session[:image]) %></div>
      <%end%>
    </div>
    <div class="span10" id='right_col'>
      <p>Image Uploader</p>
      <form method='post' enctype='multipart/form-data'>
        <input type='file' name='filename'>
        <button class='btn btn-block btn-inverse'>Upload</button>
      </form>
    </div>
  </div>
</div>

<div id='loginModal' style='display: none' class="modal hide fade">
  <div class="modal-header">
    <h3>Existing User - Login</h3>
  </div>
  <div class="modal-body">
    <form id='login' method='post' action='/login'>
      <fieldset>
        <label for='email'>e-mail<span></span></label>
        <input id='email' type='email' name='email' placeholder='e-mail' required>
        <label for='password'>Password<span></span></label>
        <input id='password' type='password' name='password' placeholder='password' required>
        <label id='radio' class="checkbox"><input type="checkbox" name='keep_logged'>Keep me logged in</label>
        <span id='user_false'></span>
      </div>
      <div class="modal-footer">
        <button class="btn btn-block btn-inverse" type="submit">Login</button>
      </form>
    </div>
  </div>

  <div id='createModal' style='display: none' class="modal hide fade">
    <div class="modal-header">
      <h3>Create New User</h3>
    </div>
    <div class="modal-body">
      <form id='new_user' method='post' action='/new_user'>
        <fieldset>
          <label for='email'>e-mail<span></span></label>
          <input id='email' type='email' name='email' placeholder='e-mail' required>
          <label for='password'>Create Password<span></span></label>
          <input id='password' type='password' name='password' placeholder='password' required>
          <label for='verify_password'>Verify Password<span></span></label>
          <input id='verify_password' type='password' name='password' placeholder='password' required>
          <label id='radio' class="checkbox"><input type="checkbox" name='keep_logged'>Keep me logged in</label>
          <span id='user_false'></span>
        </div>
        <div class="modal-footer">
          <button class="btn btn-block btn-inverse" type="submit">Login</button>
        </form>
      </div>
    </div>
